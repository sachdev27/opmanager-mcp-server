# OpManager MCP Server Configuration
# Copy this file to .env and update with your values

# OpManager API Configuration
OPMANAGER_HOST=localhost
OPMANAGER_PORT=8060
OPMANAGER_USE_SSL=false
OPMANAGER_API_KEY=your_api_key_here
OPMANAGER_VERIFY_SSL=true
OPMANAGER_TIMEOUT=30

# Server Configuration
MCP_SERVER_NAME=opmanager-mcp-server
MCP_SERVER_LOG_LEVEL=INFO
MCP_SERVER_LOG_JSON=false
# MCP_SERVER_LOG_FILE=/var/log/opmanager-mcp/server.log

# HTTP Server Configuration (for n8n integration)
MCP_HTTP_HOST=0.0.0.0
MCP_HTTP_PORT=3000

# Allowed HTTP methods for tool generation (comma-separated)
# Default: GET,POST,PUT,DELETE,PATCH (all methods)
# Set to GET only for read-only mode
ALLOWED_HTTP_METHODS=GET,POST,PUT,DELETE,PATCH

# Optional: OpenAPI spec path (defaults to bundled spec)
# OPMANAGER_OPENAPI_PATH=/path/to/custom/openapi.json
